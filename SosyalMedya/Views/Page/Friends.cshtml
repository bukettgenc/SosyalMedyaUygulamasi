    {

        var PageList = db.Hesabims.Where(x => x.ProfilNo == item.ArkadasProfilNo).ToList().OrderByDescending(x => x.Id);
        allList.AddRange(PageList);
    }
    var fotoList = db.Hesabims.Where(x => x.ProfilNo == sayi).ToList();
}
